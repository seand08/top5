<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@song) do |f| %>
      <% if @song.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

          <ul>
          <% @song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      
      <div class="form-group">
        <%#= f.label :rating %><br>
        <%= f.select :rating, ["1", "2", "3", "4", "5"], {:include_blank => 'Rating'}, class: "form-control" %>
        <%#= f.number_field :rating %>
      </div>
      
      <div class="form-group">
        <%#= f.label :artist_id %><br>
        <%= f.select(:artist_id, @artists.collect{|a| [ a.name, a.id ] }, {:include_blank => 'Please select an artist'}, class: "form-control") %>
        <%#= f.text_field :artist_id %>
      </div>
      
      <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>




